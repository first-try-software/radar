  <div class="modal">
    <div class="modal__header">
      <h3>Edit Initiative</h3>
    </div>
    <form class="edit-project-form" data-edit-form>
      <div class="modal__body">
        <div class="form-field">
          <label for="initiative_name" class="form-field__label">Name</label>
          <input type="text" id="initiative_name" name="initiative[name]" class="form-field__input" value="<%= @initiative_record.name %>" required data-input-name>
        </div>
        <div class="form-field">
          <label for="initiative_description" class="form-field__label">Brief Description</label>
