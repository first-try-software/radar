        <div class="form-field">
          <label for="initiative_point_of_contact" class="form-field__label">Contact(s)</label>
          <input type="text" id="initiative_point_of_contact" name="initiative[point_of_contact]" class="form-field__input" value="<%= @initiative_record.point_of_contact %>" data-input-poc>
