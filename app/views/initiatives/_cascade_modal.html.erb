<!-- Cascade State Modal -->
<div class="modal-overlay"
     data-initiative-state-dropdown-target="cascadeModal"
     data-action="click->initiative-state-dropdown#closeCascadeOnBackdrop keydown.escape@document->initiative-state-dropdown#closeCascade"
     hidden>
  <div class="modal">
    <div class="modal__header">
      <h3>Update State</h3>
    </div>
    <div class="modal__body">
      <p>Set initiative to <strong data-initiative-state-dropdown-target="cascadeStateName"></strong>?</p>
      <p>This will also update <strong data-initiative-state-dropdown-target="cascadeProjectCount"></strong> related project(s) to the same state.</p>
    </div>
    <div class="modal__actions">
      <button type="button" class="btn secondary" data-action="initiative-state-dropdown#closeCascade">Cancel</button>
      <button type="button" class="btn secondary" data-action="initiative-state-dropdown#skipCascade">Initiative Only</button>
      <button type="button" class="btn primary" data-action="initiative-state-dropdown#confirmCascade">Update All</button>
    </div>
  </div>
</div>
