<%= render 'shared/toast_container' %>

<%= render 'home_hero' %>

<div class="initiative-dashboard">
  <!-- Metrics Row: Health | Trend | Confidence -->
  <div class="metrics-row">
    <%= render 'shared/health_widget', presenter: @health_presenter %>
    <%= render 'shared/trend_widget', presenter: @trend_presenter %>
    <%= render 'shared/confidence_widget', presenter: @confidence_presenter %>
  </div>

  <%= render 'shared/search' %>

  <!-- Teams and Initiatives Columns -->
  <div class="sections">
    <%= render 'shared/section_compact',
               title: 'Teams',
               items: @team_presenters,
               archived_items: @archived_team_presenters,
               tooltip: 'Top-level teams in your organization. Health is averaged from immediate children (owned projects as a group + each subordinate team).' %>
    <%= render 'shared/section_compact',
               title: 'Initiatives',
               items: @initiative_presenters,
               archived_items: @archived_initiative_presenters,
               tooltip: 'Cross-cutting initiatives spanning multiple projects. Health is averaged from related projects in working states.' %>
  </div>

  <%= render 'shared/projects_section',
             title: 'Projects',
             projects: @all_projects,
             show_form: false,
             tooltip: 'All top-level projects across teams and initiatives. Each project\'s health is based on its immediate children.' %>
</div>
