<%= render 'shared/toast_container' %>

<%= render 'home_hero' %>

<div class="initiative-dashboard-v2">
  <!-- Metrics Row: Health | Trend | Confidence -->
  <div class="metrics-row-v2">
    <%= render 'shared/health_widget', presenter: @health_presenter %>
    <%= render 'shared/trend_widget', presenter: @trend_presenter %>
    <%= render 'shared/confidence_widget', presenter: @confidence_presenter %>
  </div>

  <%= render 'shared/search' %>

  <!-- Teams and Initiatives Columns -->
  <div class="sections">
    <%= render 'shared/section_compact',
               title: 'Teams',
               items: @team_presenters,
               archived_items: @archived_team_presenters %>
    <%= render 'shared/section_compact',
               title: 'Initiatives',
               items: @initiative_presenters,
               archived_items: @archived_initiative_presenters %>
  </div>

  <%= render 'shared/section',
             title: 'Projects',
             items: @project_presenters %>
</div>
